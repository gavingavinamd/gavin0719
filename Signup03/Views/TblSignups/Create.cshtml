@model Signup03.Models.SignupForm

@{
    ViewData["Title"] = "Create";
}

<h1>報名表單</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="CMobile" class="control-label"></label>*@
                <label class="control-label">手機號碼</label>
                <input asp-for="CMobile" class="form-control" />
                <span asp-validation-for="CMobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">姓名</label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="CEmail" class="form-control" />
                <span asp-validation-for="CEmail" class="text-danger"></span>
            </div>
       @*     <div class="form-group">
                <label asp-for="CCreateDt" class="control-label"></label>
                <input asp-for="CCreateDt" class="form-control" />
                <span asp-validation-for="CCreateDt" class="text-danger"></span>
            </div>*@
            <div>
                @*<input type="checkbox" name="avtivity" value=""/>@Model.CItemName*@
                @foreach(var i in Model.ActiveItem)
                {
                    <label><input type="checkbox" name="Activities" value="@i.CItemId"/>@i.CItemName</label>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到清單</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
}
